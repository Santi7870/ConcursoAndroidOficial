<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="24dp"
    android:paddingTop="60dp"
    android:paddingBottom="60dp">

    <!-- Titulo -->
    <!-- Logo de SecureExamen -->
    <!-- Referencia a tu logo -->


    <!-- Título con el texto SecureExamen -->


    <!-- Botón de registro -->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="20dp">

        <!-- Logo de SecureExamen -->
        <ImageView
            android:id="@+id/ivLogo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/secure_examen_logo"/>   <!-- Referencia a tu logo -->


        <!-- Título con el texto SecureExamen -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SecureExamen"
            android:textSize="24sp"
            android:textColor="@android:color/black"
            android:fontFamily="sans-serif-medium"
            android:textStyle="bold" />

    </LinearLayout>

    <Button
        android:id="@+id/btnRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Register"
        android:textColor="#FFFFFF"
        android:backgroundTint="#8B0000"
        android:textSize="18sp"
        android:layout_marginBottom="20dp"
        android:padding="12dp"
        android:layout_gravity="center" />

    <!-- Botón de inicio de sesión -->
    <Button
        android:id="@+id/btnLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Login"
        android:textColor="#FFFFFF"
        android:backgroundTint="#8B0000"
        android:textSize="18sp"
        android:padding="12dp"
        android:layout_gravity="center" />

    <ImageView
        android:id="@+id/ivUdlalogo"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/udla_logo"
        android:layout_marginBottom="20dp"
        android:contentDescription="UDLA Logo" />

</LinearLayout>

